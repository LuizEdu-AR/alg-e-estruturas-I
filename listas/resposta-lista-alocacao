Questão 01:
a)
#include <stdio.h>
#include <stdlib.h>

int main() {
    int N;

    printf("Digite o número de entrevistados: ");
    scanf("%d", &N);

    char *sexo = (char *)malloc(N * sizeof(char));
    char *opiniao = (char *)malloc(N * sizeof(char));

    if (sexo == NULL || opiniao == NULL) {
        printf("Erro na alocação de memória. Encerrando o programa.\n");
        return 1;
    }

    for (int i = 0; i < N; i++) {
        printf("Para a pessoa %d:\n", i + 1);

        printf("   Sexo (M/F): ");
        scanf(" %c", &sexo[i]);

        printf("   Opinião (gostou/não gostou): ");
        scanf(" %c", &opiniao[i]);
    }
    printf("\nResultados da pesquisa:\n");
    for (int i = 0; i < N; i++) {
        printf("Pessoa %d - Sexo: %c, Opinião: %c\n", i + 1, sexo[i], opiniao[i]);
    }

    free(sexo);
    free(opiniao);

    return 0;
}

b:

#include <stdio.h>
#include <stdlib.h>

int main() {
    int N;
    int countMulherGostou = 0;

    printf("Digite o número de entrevistados: ");
    scanf("%d", &N);

    char *sexo = (char *)malloc(N * sizeof(char));
    char *opiniao = (char *)malloc(N * sizeof(char));

    if (sexo == NULL || opiniao == NULL) {
        // Verificar se a alocação foi bem-sucedida
        printf("Erro na alocação de memória. Encerrando o programa.\n");
        return 1; 
    }

    for (int i = 0; i < N; i++) {
        printf("Para a pessoa %d:\n", i + 1);

        printf("   Sexo (M/F): ");
        scanf(" %c", &sexo[i]);

        printf("   Opinião (gostou/não gostou): ");
        scanf(" %c", &opiniao[i]);

        if (sexo[i] == 'F' && opiniao[i] == 'g') {
            countMulherGostou++;
        }
    }
    if (countMulherGostou > 0) {
        float percentualMulherGostou = (float)countMulherGostou / N * 100;
        printf("\nPorcentagem de mulheres que gostaram: %.2f%%\n", percentualMulherGostou);
    } else {
        printf("\nNenhuma mulher gostou do produto.\n");
    }

    printf("\nResultados da pesquisa:\n");
    for (int i = 0; i < N; i++) {
        printf("Pessoa %d - Sexo: %c, Opinião: %c\n", i + 1, sexo[i], opiniao[i]);
    }

    free(sexo);
    free(opiniao);

    return 0; 
}

c:

#include <stdio.h>
#include <stdlib.h>

int main() {
    int N;
    int countHomemNaoGostou = 0; 

    printf("Digite o número de entrevistados: ");
    scanf("%d", &N);

    char *sexo = (char *)malloc(N * sizeof(char));
    char *opiniao = (char *)malloc(N * sizeof(char));

    if (sexo == NULL || opiniao == NULL) {
        // Verificar se a alocação foi bem-sucedida
        printf("Erro na alocação de memória. Encerrando o programa.\n");
        return 1; 
    }

    for (int i = 0; i < N; i++) {
        printf("Para a pessoa %d:\n", i + 1);

        printf("   Sexo (M/F): ");
        scanf(" %c", &sexo[i]);

        printf("   Opinião (gostou/não gostou): ");
        scanf(" %c", &opiniao[i]);

        if (sexo[i] == 'M' && opiniao[i] == 'n') {
            countHomemNaoGostou++;
        }
    }

    if (countHomemNaoGostou > 0) {
        float percentualHomemNaoGostou = (float)countHomemNaoGostou / N * 100;
        printf("\nPorcentagem de homens que não gostaram: %.2f%%\n", percentualHomemNaoGostou);
    } else {
        printf("\nNenhum homem respondeu que não gostou do produto.\n");
    }

    printf("\nResultados da pesquisa:\n");
    for (int i = 0; i < N; i++) {
        printf("Pessoa %d - Sexo: %c, Opinião: %c\n", i + 1, sexo[i], opiniao[i]);
    }

    free(sexo);
    free(opiniao);

    return 0; 
}

Questão 02:
#include <stdio.h>

int main() {
    int N; 
    char gabarito[100];
    float notaAluno[10]; 
    int numAprovados = 0; 

    printf("Digite o número de questões: ");
    scanf("%d", &N);

    if (N <= 0 || N > 100) {
        printf("Número de questões inválido. Encerrando o programa.\n");
        return 1; 
    }

    printf("Digite o gabarito da prova (sem espaços): ");
    scanf("%s", gabarito);

    for (int i = 0; i < 10; i++) {
        printf("Digite as respostas do aluno %d (sem espaços): ", i + 1);
        char respostasAluno[100];
        scanf("%s", respostasAluno);

        int pontuacao = 0;
        for (int j = 0; j < N; j++) {
            if (respostasAluno[j] == gabarito[j]) {
                pontuacao += 10 / N;
            }
        }
        notaAluno[i] = pontuacao;

        if (notaAluno[i] >= 6) {
            numAprovados++;
        }
    }

    // Exibir as notas dos alunos
    printf("\nNotas dos alunos:\n");
    for (int i = 0; i < 10; i++) {
        printf("Aluno %d: %.2f\n", i + 1, notaAluno[i]);
    }

    // Calcular e exibir a porcentagem de aprovação
    float porcentagemAprovacao = (float)numAprovados / 10 * 100;
    printf("\nPorcentagem de aprovação: %.2f%%\n", porcentagemAprovacao);

    return 0;
}
